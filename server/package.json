{
    "name": "invitation-server",
    "version": "1.0.0",
    "description": "Backend pour le site d'invitation d'anniversaire",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "dev": "nodemon server/server.js",
        "client": "cd client && npm start",
        "build": "cd client && npm run build",
        "render-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
    },
    "keywords": [
        "api",
        "express",
        "mongodb",
        "invitation", 
        "anniversaire", 
        "pwa"
    ],
    "author": "Pinfada",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.9.0",
        "firebase": "^10.7.1",
        "helmet": "^7.0.0",
        "mongoose": "^7.8.6",
        "multer": "^1.4.5-lts.1",
        "qrcode": "^1.5.3"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    }
}
